<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=0, width=device-width"/>
    <title>webview</title>
    <link rel="stylesheet" type="text/css" href="../css/common.css" />
    <style>
        body{background-color: #fff;}  
        .more-bt{position:absolute;display:inline-block;right:0;top:0;width:22px;height:12px;margin-top:16px;margin-right:16px;background-image:url(../image/header-more-bt.png);background-size:22px 12px}
    </style>
</head>
<body>
    <div id="wrap">
        <div id="header">
            <a class="back-icon" tapmode="" onclick="api.closeWin()"></a>
            <h1 class="" id="header_txt">webview</h1>
        </div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src='../script/common.js'></script>
<script>
    apiready = function(){
        var header = $api.byId('header');
        $api.fixIos7Bar(header);
    	var title = api.pageParam.title;
    	var url = api.pageParam.url;

 	    $api.byId('header_txt').innerHTML = title;
    	
        var width = api.winWidth;
        var height = api.winHeight;
        var header = $api.byId('header');
        var headerPos = $api.offset(header);
        var y = headerPos.h;
        api.openFrame({
            name:'webview',
            url:'webviewCon.html',
            showProgress: true,
            pageParam:{title:title, url:url},
            rect:{
                x:0,
                y:y,
                width:width,
                height:height
            }
        });
    }
</script>
</html>