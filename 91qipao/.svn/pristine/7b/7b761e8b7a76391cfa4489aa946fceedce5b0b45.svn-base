//收藏文章
var lastCollectTime = 0;
function colloct(){
    var nowTime = (new Date()).valueOf();
    if (nowTime-lastCollectTime < 1000) return;     
    lastCollectTime = nowTime;
    
    var self = $('.collect-ico')
    var act = 'add';

    if(isCollected){
        act = 'cancel';
    }
    
    var ajaxUrl = 'my_favorite_topic_set.php';

    api_ajax(2,
        ajaxUrl,
        {
        tid:tid,
        act:act
        },
        function(ret, _, _, tid) {
            if (ret.code == 988)
            {
                return;
            }
            $api.setStorage('collect_tid', tid);
                
            console.log(ret);
            if(ret.code == 100||ret.code == 102){
                //setCollected(true);
               
                $api.setStorage('set_my_change', 1);
                $api.setStorage('set_my_change_topic', 1);
                if(isCollected){
                   
                    //playStar();
                    $('.collect-icon').removeClass('icon-fav').addClass('icon-fav-1');
                     isCollected = !isCollected;
                     myToast('已取消收藏！');
                }else{
                    
                    $('.collect-icon').addClass('icon-fav').removeClass('icon-fav-1');
                     isCollected = !isCollected;
                    myToast('收藏成功！');
                }
                //myToast(ret.msg);
            }else if(ret.code = 104){
                myToast(ret.msg);
                isCollected = true;
                $('.collect-icon').addClass('icon-fav').removeClass('icon-fav-1');
            }else{
                myToast(ret.msg);
            }
        },
        tid,
        0
        );
}

//关注作者
function followAuthor(self,e){
    if(e) e.cancelBubble = true;
    var act = 'add';
    if(isFollowed) act = 'cancel';
    favoriteUser(authorid,act,function(ret){
        if(ret.code == 100){
            if(isFollowed){
                $(self).text('+关注').removeClass('bg-gray');
                myToast('取消关注成功');
                isFollowed = 0;
            }else{
                //$(self).text('取消关注').addClass('bg-gray');
                $('.item-right').html('<span style="line-height:0.9rem;color:#999;margin-top:0.2rem;">阅读数:<span class="color-999">'+viewCount+'</span></span>');
                myToast('关注成功');
                isFollowed = 1;
            }
        }else if(ret.code == 101){
            myToast(ret.msg);
        }
    });
}

