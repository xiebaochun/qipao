*{-webtkit-box-sizing:content-box;box-sizing:content-box}
body{background-color:#f2f2f2;height:auto}
#cover{position: relative; height:6rem;/*text-align:center;*/top:-2px;width:100%;background-color:#fff;/*background-image:url(../image/my_bg.png);background-size:105% 105%;background-position:0 -2px;*/z-index:30}
#cover .cover{-webkit-filter:blur(20px);filter:blur(20px);opacity:.8}
#cover>img{position:absolute;left:0}
#cover label{position:relative;z-index:5;color:#333}
#avatar{position: relative; /*position:absolute;*//*width: 100%;*//*top:2.5rem;*/ margin:0 0.5rem;border-bottom:1px solid #eee;padding:0.5rem 0;/*padding:0rem 0 5px 0.5rem;*/z-index:5}
#avatar>.headImg{display:inline-block;width:2.5rem;height:2.5rem;border-radius:50%;/*border:2px solid rgba(200,200,200,.5);*/background-color:#eee;background-size: 105% 105%;background-position: -2px -2px;}
.edit{position:absolute;display:inline-block;left:15px;bottom:0;font-size:20px;display:inline-block;width:20px;height:20px;color:#fff}
.setting-ico{display:inline-block;position:absolute;right:15px;font-size:20px;color:#fff}
.nopost-topic-wrap{padding:3rem 0;background-color:#fff;text-align:center}
.nopost-topic-wrap>span{margin-top:1rem;font-size:.7rem;color:#333}
.nopost-topic-wrap>.btn{display:inline-block;margin-top:1rem;font-size:.6rem;padding:.3rem 1.5rem;background-color:#ffd600}
.user-list li img,.user-list li span{vertical-align:middle;margin-left:8px}
.user-list li a{font-size:14px;font-weight:700;font-family:"微软雅黑"}
.user-list li a img{width:30px;height:30px;border-radius:15px}
.user-list li a .info-count{position:absolute;right:35px;font-weight:400;top:50%;display:inline-block;color:#999;-webkit-transform:translateY(-50%);transform:translateY(-50%)}
.mui-navigate-right:after{font-size:20px!important}
.login_register_wraper{display:inline-block;padding:8px 10px;background-color:#99e;border-radius:4px}
.user-info-edit{width:20px;border-radius:10px}
.nav{position:absolute;width:100%;bottom:0;left:0}
.nav>li{position: relative; display:inline-block;width:24%;padding:.25rem 0;margin:0}
.nav>li>span{margin-right:0.2rem; line-height:.6rem;font-size:.55rem;color:#333}
.nav>li>.increment-count{display: inline-block;position: absolute;right: 0.6rem;top:0.5rem;padding:0rem 0.2rem;background-color: #fd4f58; color:#fff;font-size:0.4rem;border-radius: 0.5rem;}
