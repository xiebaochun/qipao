</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src='../script/common.js'></script>
<script>
function openTopicFrame(name){
    api.openFrame({
                name : name,
                url : name + '.html',
                bounces : false,
                opaque : true,
                vScrollBarEnabled : false,
                pageParam : {
                    headerHeight : headerPos.h,
                    // tid : tid
                },
                rect : {
                    x : 0,
                    y : headerPos.h,
                    w : width,
                    h : height
                }
            });
}
function showFollow(){
    if(!isFollowOpened){
        openTopicFrame('topicFollow');
        isFollowOpened =true; 
        //alert('打开follow');   
    }else{
        api.setFrameAttr({
            name : 'topicFollow',
            hidden : false
        });
        //alert('显示follow');
    }
    
    api.setFrameAttr({
        name : 'topicExplore',
        hidden : true
    });
    
    $('.header-bt').removeClass('top-nav-active');
    $('.header-follow').addClass('top-nav-active');
    currentFrame = 1;
}

function showExplore(){
    api.setFrameAttr({
        name : 'topicExplore',
        hidden : false
    });
    if(isFollowOpened){
        api.setFrameAttr({
            name : 'topicFollow',
            hidden : true
        });
    }
    
    // api.closeFrame({
    //     name: 'topicFollow'
    // });
    //openTopicFrame('topicExplore');
    $('.header-bt').removeClass('top-nav-active');
    $('.header-explore').addClass('top-nav-active');
    currentFrame = 0;
}

function hideExplore(){
    api.setFrameAttr({
        name : 'topicExplore',
        hidden : true
    });
    //alert('close explore');
}
function hideFollow(){
    api.setFrameAttr({
        name : 'topicFollow',
        hidden : true
    });
    //alert('close follow');
}
function setTopicFrame(){
    if(currentFrame){
        showFollow();
    }else{
        showExplore();
    }
}
var width,header,headerPos,height,nav,navPos;
var isFollowOpened = false;
var currentFrame = 0;
