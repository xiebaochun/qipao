.user-list{background-color:#fff}
.user-list .user-item{position:relative;margin:0 0rem;padding:4px 0.5rem 6px 0.5rem;background-color:#fff;/*border-bottom:1px solid #eee*/}
.user-list .user-item:after{position: absolute;
    right: 0.5rem;
    bottom: 0;
    left: 0.5rem;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #eee;
}
.user-list .avator-wrap{position:relative;display:inline-block;width:1.8rem;height:1.8rem;vertical-align:middle;}
.user-list .avator-wrap>.avator-img{display:inline-block;width:100%;height:100%;border-radius:50%;border:1px solid #fff;font-size: 0.6rem;}
.user-list .avator-wrap>.avator-tag{position:absolute;display:inline-block;right:0;bottom:0;width:.5rem;height:.5rem;}
.user-list .user-info{display:inline-block;margin-left:.5rem;line-height:.6rem;vertical-align:middle}
.user-list .user-info .user-name{font-size:.6rem;vertical-align:middle}
.user-list .user-info .gender-ico{vertical-align:middle}
.user-list .user-info>.user-tag{color:#999;font-size:.5rem}
.user-list>.user-item .arrow-right{position:absolute;right:0.5rem;top:50%;margin-top:-6px;width:7px;height:13px;background-image:url(../image/arr-r.png);background-size:7px 13px}
.user-list>.user-item .follow-bt{display:inline-block;position:absolute;right:0.5rem;top:50%;margin-top:-.5rem;border:1px solid #666;border-radius:.2rem;text-align:center;font-size:.6rem;font-size:0.5rem;border:1px solid #faa;padding:0.1rem 0.3rem;border-radius:4px;color:#ff6263}